{% extends 'base.html.twig' %}

{% block title %}Instrument{% endblock %}

{% block body %}
    <h1>Instrument</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ instrument.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ instrument.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ instrument.description }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ instrument.createdAt ? instrument.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modified_at</th>
                <td>{{ instrument.modifiedAt ? instrument.modifiedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('instrument_index') }}">back to list</a>

    <a href="{{ path('instrument_edit', {'id': instrument.id}) }}">edit</a>

